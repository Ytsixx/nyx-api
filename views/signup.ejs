<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
</head>
<body class="h-screen flex items-center justify-center overflow-hidden"
style="
  background-image: url('/images/logo3.png');
  background-size: 130%;
  background-position: center -20%;
  background-repeat: no-repeat;
  background-attachment: fixed;
">

  <!-- FORMULÁRIO SIGN UP -->
  <div class="  p-8 shadow-2xl w-full max-w-md bg-opacity-95">
    
    <!-- Título -->
    <h1 class="
      text-3xl 
      font-bold 
      mb-8 
      text-center 
      text-black
      font-saira
    ">
      Sign Up
    </h1>

    <!-- Formulário -->
    <form action="/signup" method="POST" class="space-y-5">
      
      <!-- Campo Username -->
      <div>
        <label for="username" class="block text-sm font-medium text-black mb-2 font-saira">
          @Username
        </label>
        <input 
          type="text" 
          id="username"
          name="username" 
          placeholder="@username" 
          class="
            w-full 
            p-3 
            focus:outline-none 
            focus:ring-2 
            focus:ring-black
            font-saira
          "
          required
        />
      </div>

      <!-- Campo Email -->
      <div>
        <label for="email" class="block text-sm font-medium text-black mb-2 font-saira">
          Email
        </label>
        <input 
          type="email" 
          id="email"
          name="email" 
          placeholder="your@email.com" 
          class="
            w-full 
            p-3 
            focus:outline-none 
            focus:ring-2 
            focus:ring-black
            font-saira
          "
          required
        />
      </div>

      <!-- Campo Password -->
      <div>
        <label for="password" class="block text-sm font-medium text-black mb-2 font-saira">
          Password
        </label>
        <input 
          type="password" 
          id="password"
          name="password" 
          placeholder="••••••••" 
          class="
            w-full 
            p-3 
            focus:outline-none 
            focus:ring-2 
            focus:ring-black
            font-saira
          "
          required
        />
      </div>

      <!-- Botão Register -->
      <button 
        type="submit" 
        class="
          w-full 
          bg-black 
          hover:bg-gray-800 
          active:bg-gray-900
          active:scale-95
          text-white 
          font-bold 
          py-3 
          
          
          transition-all 
          duration-150
          font-saira
          cursor-pointer
        "
      >
        Register
      </button>

      <!-- Botão Sign In -->
      <button 
        type="button"
        onclick="window.location.href='/signin'"
        class="
          w-full 
          hover:bg-gray-100 
          active:bg-gray-200
          active:scale-95
          text-black 
          font-bold 
          py-3 
          transition-all 
          duration-150
          font-saira
          cursor-pointer
        "
      >
        Sign In
      </button>
    </form>

    <!-- Texto Already have account -->
    <p class="mt-6 text-center text-black font-saira">
      Already have an account? 
      <a href="/signin" class="text-black hover:underline font-bold">Sign In</a>
    </p>

  </div>

</body>
</html>